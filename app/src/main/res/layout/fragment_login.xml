<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/color_f5f5f5">

    <TextView
        android:id="@+id/tv_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LIMS"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="@color/bottom_down"
        android:layout_marginTop="35dp"
        android:layout_marginStart="25dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="记录每一次改变"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@id/tv_1"
        app:layout_constraintTop_toBottomOf="@id/tv_1" />

    <View
        android:id="@+id/view_1"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:background="@drawable/edit_login_back"
        android:layout_marginHorizontal="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_2"
        android:layout_marginTop="50dp" />

    <View
        android:id="@+id/view_2"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/color_f5f5f5"
        app:layout_constraintStart_toStartOf="@id/view_1"
        app:layout_constraintEnd_toEndOf="@id/view_1"
        app:layout_constraintTop_toTopOf="@id/view_1"
        app:layout_constraintBottom_toBottomOf="@id/view_1"
        android:layout_margin="10dp" />

    <EditText
        android:id="@+id/number"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="@id/view_2"
        app:layout_constraintEnd_toEndOf="@id/view_2"
        app:layout_constraintBottom_toTopOf="@id/view_2"
        app:layout_constraintTop_toTopOf="@id/view_1"
        android:textCursorDrawable="@null"
        android:text="1111"
        android:hint="请输入学号/工号"
        android:inputType="number"
        android:background="@color/transparent" />

    <EditText
        android:id="@+id/password"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="@id/view_2"
        app:layout_constraintEnd_toEndOf="@id/view_2"
        app:layout_constraintTop_toBottomOf="@id/view_2"
        app:layout_constraintBottom_toBottomOf="@id/view_1"
        android:textCursorDrawable="@null"
        android:inputType="textPassword"
        android:text="111111"
        android:hint="请输入密码"
        android:background="@color/transparent" />

    <Button
        android:id="@+id/login_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/view_1"
        app:layout_constraintEnd_toEndOf="@id/view_1"
        android:text="登录"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/view_1"
        android:layout_marginTop="20dp" />


</androidx.constraintlayout.widget.ConstraintLayout>