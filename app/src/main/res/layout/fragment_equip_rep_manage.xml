<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:visibility="gone"
        android:id="@+id/iv_1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/no_data"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:visibility="gone"
        android:id="@+id/tv_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="没有需要维修的设备"
        android:textColor="@color/bottom_up"
        app:layout_constraintTop_toBottomOf="@id/iv_1"
        app:layout_constraintStart_toStartOf="@id/iv_1"
        app:layout_constraintEnd_toEndOf="@id/iv_1" />

    <androidx.recyclerview.widget.RecyclerView
        android:visibility="visible"
        android:id="@+id/rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <androidx.constraintlayout.widget.Group
        android:visibility="gone"
        android:id="@+id/group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="tv_2, v_1, tv_3, tv_4,tv_5, tv_6, tv_7,
        tv_8,tv_9, tv_10, tv_11, tv_12,tv_13, tv_14,submit_button" />

    <TextView
        android:id="@+id/tv_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="详细信息"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp" />

    <View
        android:id="@+id/v_1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line"
        android:layout_marginHorizontal="10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_2" />

    <TextView
        android:id="@+id/tv_13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="实验室："
        style="@style/TextStyle_black_14sp"
        app:layout_constraintTop_toBottomOf="@id/v_1"
        app:layout_constraintStart_toStartOf="@id/v_1"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/tv_14"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="信息系统与理论实验室"
        android:gravity="start|center"
        style="@style/TextStyle_black_14sp"
        app:layout_constraintTop_toBottomOf="@id/v_1"
        app:layout_constraintStart_toEndOf="@id/tv_3"
        android:layout_marginStart="50dp"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/tv_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="设备："
        style="@style/TextStyle_black_14sp"
        app:layout_constraintTop_toBottomOf="@id/tv_13"
        app:layout_constraintStart_toStartOf="@id/tv_13"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/tv_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="学生计算机"
        style="@style/TextStyle_black_14sp"
        app:layout_constraintTop_toBottomOf="@id/tv_14"
        app:layout_constraintStart_toEndOf="@id/tv_3"
        android:layout_marginStart="50dp"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/tv_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="提供意见人："
        style="@style/TextStyle_black_14sp"
        app:layout_constraintTop_toBottomOf="@id/tv_3"
        app:layout_constraintStart_toStartOf="@id/tv_3"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/tv_6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="190511336"
        style="@style/TextStyle_black_14sp"
        app:layout_constraintTop_toBottomOf="@id/tv_4"
        app:layout_constraintStart_toStartOf="@id/tv_4"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/tv_7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="李壮"
        style="@style/TextStyle_black_14sp"
        android:layout_marginStart="5dp"
        app:layout_constraintTop_toBottomOf="@id/tv_4"
        app:layout_constraintStart_toEndOf="@id/tv_6"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/tv_8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="（学生）"
        style="@style/TextStyle_black_14sp"
        app:layout_constraintTop_toBottomOf="@id/tv_4"
        app:layout_constraintStart_toEndOf="@id/tv_7"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/tv_9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="时间："
        style="@style/TextStyle_black_14sp"
        app:layout_constraintTop_toBottomOf="@id/tv_5"
        app:layout_constraintStart_toStartOf="@id/tv_5"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/tv_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2023-01-11 14:31:32"
        style="@style/TextStyle_black_14sp"
        app:layout_constraintTop_toBottomOf="@id/tv_8"
        app:layout_constraintStart_toStartOf="@id/tv_6"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/tv_11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="维护意见："
        style="@style/TextStyle_black_14sp"
        app:layout_constraintTop_toBottomOf="@id/tv_9"
        app:layout_constraintStart_toStartOf="@id/tv_9"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/tv_12"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="维护意见"
        style="@style/TextStyle_black_14sp"
        android:gravity="start|center"
        app:layout_constraintTop_toBottomOf="@id/tv_10"
        app:layout_constraintStart_toStartOf="@id/tv_10"
        app:layout_constraintEnd_toEndOf="@id/v_1"
        android:layout_marginTop="10dp" />

    <Button
        android:id="@+id/submit_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="完成维修"
        android:textSize="16sp"
        android:layout_marginHorizontal="30dp"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="30dp" />

</androidx.constraintlayout.widget.ConstraintLayout>