<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_back_no_checked"
    android:elevation="6dp"
    android:layout_margin="5dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:padding="3dp">

    <TextView
        android:id="@+id/tv_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/lab_item_back"
        android:text="信息系统与理论"
        android:textSize="14sp"
        android:textStyle="bold"
        android:padding="5dp"
        android:layout_margin="5dp"
        app:layout_constraintStart_toEndOf="@id/iv_1"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="南区实训楼301-303"
        style="@style/TextStyle"
        android:textColor="@color/color_666666"
        app:layout_constraintTop_toBottomOf="@id/tv_2"
        app:layout_constraintStart_toStartOf="@id/tv_2"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"/>

    <ImageView
        android:id="@+id/iv_1"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/shiyongzhong"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_2"
        app:layout_constraintBottom_toBottomOf="@id/tv_2"
        android:layout_marginEnd="20dp" />


    <TextView
        android:id="@+id/tv_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="人"
        app:layout_constraintTop_toTopOf="@id/tv_2"
        app:layout_constraintBottom_toBottomOf="@id/tv_2"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="10dp"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/tv_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="76"
        app:layout_constraintTop_toTopOf="@id/tv_2"
        app:layout_constraintBottom_toBottomOf="@id/tv_2"
        app:layout_constraintEnd_toStartOf="@id/tv_4"
        android:layout_marginEnd="3dp"
        android:textSize="13sp" />



</androidx.constraintlayout.widget.ConstraintLayout>