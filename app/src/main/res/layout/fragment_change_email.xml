<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/color_f5f5f5">

    <TextView
        android:id="@+id/tv_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="绑定邮箱"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="@color/bottom_down"
        android:layout_marginTop="35dp"
        android:layout_marginStart="25dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="注意：邮箱只可绑定一次，绑定后不可更改"
        android:textColor="@color/red"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@id/tv_1"
        app:layout_constraintTop_toBottomOf="@id/tv_1" />

    <View
        android:id="@+id/view_1"
        android:layout_width="0dp"
        android:layout_height="180dp"
        android:background="@drawable/edit_login_back"
        android:layout_marginHorizontal="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_1"
        android:layout_marginTop="50dp" />

    <View
        android:id="@+id/view_2"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/color_f5f5f5"
        app:layout_constraintStart_toStartOf="@id/view_1"
        app:layout_constraintEnd_toEndOf="@id/view_1"
        app:layout_constraintTop_toTopOf="@id/view_1"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="60dp" />

    <View
        android:id="@+id/view_3"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/color_f5f5f5"
        app:layout_constraintStart_toStartOf="@id/view_1"
        app:layout_constraintEnd_toEndOf="@id/view_1"
        app:layout_constraintTop_toBottomOf="@id/view_2"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="60dp" />

    <EditText
        android:id="@+id/email1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="@id/view_2"
        app:layout_constraintEnd_toEndOf="@id/view_2"
        app:layout_constraintBottom_toTopOf="@id/view_2"
        app:layout_constraintTop_toTopOf="@id/view_1"
        android:textCursorDrawable="@null"
        android:inputType="textEmailAddress"
        android:hint="请输入邮箱地址"
        android:background="@color/transparent" />

    <EditText
        android:id="@+id/email2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="@id/view_2"
        app:layout_constraintEnd_toEndOf="@id/view_2"
        app:layout_constraintTop_toBottomOf="@id/view_2"
        app:layout_constraintBottom_toTopOf="@id/view_3"
        android:textCursorDrawable="@null"
        android:inputType="textEmailAddress"
        android:hint="请再次输入邮箱地址"
        android:background="@color/transparent" />

    <EditText
        android:id="@+id/code"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="@id/view_3"
        app:layout_constraintEnd_toStartOf="@id/get_code"
        app:layout_constraintTop_toBottomOf="@id/view_3"
        app:layout_constraintBottom_toBottomOf="@id/view_1"
        android:textCursorDrawable="@null"
        android:inputType="number"
        android:hint="请输入邮箱验证码"
        android:maxLength="6"
        android:background="@color/transparent" />

    <TextView
        android:visibility="visible"
        android:id="@+id/get_code"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="获取验证码"
        android:textColor="@color/bottom_down"
        android:textSize="16sp"
        android:gravity="center_vertical"
        app:layout_constraintStart_toEndOf="@id/code"
        app:layout_constraintEnd_toEndOf="@id/view_3"
        app:layout_constraintTop_toBottomOf="@id/view_3"
        app:layout_constraintBottom_toBottomOf="@id/view_1" />

    <Button
        android:id="@+id/confirm_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/view_1"
        app:layout_constraintEnd_toEndOf="@id/view_1"
        android:text="确定"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/view_1"
        android:layout_marginTop="20dp" />


</androidx.constraintlayout.widget.ConstraintLayout>