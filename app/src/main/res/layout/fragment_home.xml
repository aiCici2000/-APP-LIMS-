<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:cube_ptr="http://schemas.android.com/apk/res-auto">



    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:id="@+id/f_home_iv1"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@color/bottom_down"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="10dp"
        app:round="20dp"/>

    <TextView
        android:id="@+id/f_home_tv1"
        android:fontFamily="@font/ding_ding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:background="@drawable/bottom_line"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="@id/f_home_iv1"
        app:layout_constraintStart_toStartOf="@id/f_home_iv1"
        android:layout_margin="10dp"
        android:textSize="14sp"/>

    <ImageView
        android:id="@+id/iv_button"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/shuaxin"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="@id/f_home_iv1"
        app:layout_constraintTop_toTopOf="@id/f_home_iv1" />



    <ImageView
        android:visibility="gone"
        android:id="@+id/f_home_v1"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:paddingBottom="10dp"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@id/f_home_tv1"
        app:layout_constraintStart_toStartOf="@id/f_home_iv1"
        app:layout_constraintEnd_toEndOf="@id/f_home_tv1"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"/>

    <TextView
        android:id="@+id/f_home_tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="空闲实验室"
        app:layout_constraintBottom_toBottomOf="@id/f_home_iv1"
        app:layout_constraintStart_toStartOf="@id/f_home_iv1"
        app:layout_constraintEnd_toStartOf="@id/f_home_tv4"
        android:layout_margin="15dp"
        android:gravity="center_horizontal"
        android:textColor="@color/gray"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/f_home_tv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:padding="5dp"
        app:layout_constraintTop_toBottomOf="@id/f_home_v1"
        app:layout_constraintBottom_toTopOf="@id/f_home_tv2"
        app:layout_constraintStart_toStartOf="@id/f_home_tv2"
        app:layout_constraintEnd_toEndOf="@id/f_home_tv2" />

    <TextView
        android:id="@+id/f_home_tv4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="非空闲实验室"
        app:layout_constraintBottom_toBottomOf="@id/f_home_iv1"
        app:layout_constraintStart_toEndOf="@id/f_home_tv2"
        app:layout_constraintEnd_toStartOf="@id/f_home_tv6"
        android:layout_margin="15dp"
        android:gravity="center_horizontal"
        android:textColor="@color/gray"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/f_home_tv5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:padding="5dp"
        app:layout_constraintTop_toBottomOf="@id/f_home_v1"
        app:layout_constraintBottom_toTopOf="@id/f_home_tv4"
        app:layout_constraintStart_toStartOf="@id/f_home_tv4"
        app:layout_constraintEnd_toEndOf="@id/f_home_tv4" />

    <TextView
        android:id="@+id/f_home_tv6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="所有课程"
        app:layout_constraintBottom_toBottomOf="@id/f_home_iv1"
        app:layout_constraintStart_toEndOf="@id/f_home_tv4"
        app:layout_constraintEnd_toEndOf="@id/f_home_iv1"
        android:layout_margin="15dp"
        android:gravity="center_horizontal"
        android:textColor="@color/gray"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/f_home_tv7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:padding="5dp"
        app:layout_constraintTop_toBottomOf="@id/f_home_v1"
        app:layout_constraintBottom_toTopOf="@id/f_home_tv6"
        app:layout_constraintStart_toStartOf="@id/f_home_tv6"
        app:layout_constraintEnd_toEndOf="@id/f_home_tv6" />

    <View
        android:id="@+id/f_home_v2"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        app:layout_constraintTop_toBottomOf="@id/f_home_iv1"
        android:layout_marginTop="30dp" />

    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:id="@+id/f_home_v3"
        android:layout_width="0dp"
        android:layout_height="5dp"
        android:background="@color/line"
        app:layout_constraintTop_toBottomOf="@id/f_home_v2"
        app:layout_constraintStart_toStartOf="@id/f_home_iv1"
        app:layout_constraintEnd_toEndOf="@id/f_home_iv1"
        android:layout_marginTop="5dp"
        app:round="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="主要功能"
        app:layout_constraintBottom_toTopOf="@id/f_home_v3"
        app:layout_constraintStart_toStartOf="@id/f_home_v3"
        />

    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:id="@+id/iv_back"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#e6e6e6"
        app:layout_constraintTop_toBottomOf="@id/f_home_v3"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="10dp"
        app:round="20dp"
        android:layout_margin="10dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/iv_back"
        app:layout_constraintBottom_toBottomOf="@id/iv_back"
        app:layout_constraintStart_toStartOf="@id/iv_back"
        app:layout_constraintEnd_toEndOf="@id/iv_back"
        android:layout_margin="8dp" />

</androidx.constraintlayout.widget.ConstraintLayout>