<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:visibility="gone"
        android:id="@+id/iv_1"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/no_data"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:visibility="gone"
        android:id="@+id/tv_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="当前没有数据"
        android:textColor="@color/bottom_up"
        app:layout_constraintTop_toBottomOf="@id/iv_1"
        app:layout_constraintStart_toStartOf="@id/iv_1"
        app:layout_constraintEnd_toEndOf="@id/iv_1" />


    <TextView
        android:visibility="visible"
        android:id="@+id/tv"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="点击选择您要申请的实验室"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/bottom_down"
        android:background="@color/line"
        android:textSize="14sp"
        android:gravity="center|start"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="10dp"
        android:paddingStart="5dp"
        android:elevation="6dp"
        android:foreground="?android:attr/selectableItemBackground" />

    <androidx.recyclerview.widget.RecyclerView
        android:visibility="visible"
        android:id="@+id/rv"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/tv"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="0dp" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:constraint_referenced_ids="submit_button,tv_2, tv_3, tv_4, tv_5, tv_6, tv_7, tv_8, tv_9, tv_10, tv_11,tv_12,tv_13, v_1,v_2, rv_1" />


    <TextView
        android:id="@+id/tv_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="当前课程信息"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv" />

    <View
        android:id="@+id/v_1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line"
        android:layout_marginHorizontal="10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_2" />

    <TextView
        android:id="@+id/tv_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="课程名称："
        app:layout_constraintStart_toStartOf="@id/tv_2"
        app:layout_constraintTop_toBottomOf="@id/v_1"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/tv_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="云"
        android:layout_marginTop="20dp"
        android:layout_marginStart="35dp"
        style="@style/TextStyle_black_14sp"
        app:layout_constraintStart_toEndOf="@id/tv_3"
        app:layout_constraintTop_toBottomOf="@id/v_1" />

    <TextView
        android:id="@+id/tv_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="任课教师："
        app:layout_constraintStart_toStartOf="@id/tv_3"
        app:layout_constraintTop_toBottomOf="@id/tv_3"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/tv_6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="李"
        android:layout_marginTop="8dp"
        android:layout_marginStart="35dp"
        style="@style/TextStyle_black_14sp"
        app:layout_constraintStart_toEndOf="@id/tv_5"
        app:layout_constraintTop_toBottomOf="@id/tv_4" />

    <TextView
        android:id="@+id/tv_7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="课程节次："
        app:layout_constraintStart_toStartOf="@id/tv_5"
        app:layout_constraintTop_toBottomOf="@id/tv_5"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/tv_8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10"
        android:layout_marginTop="8dp"
        android:layout_marginStart="35dp"
        style="@style/TextStyle_black_14sp"
        app:layout_constraintStart_toEndOf="@id/tv_7"
        app:layout_constraintTop_toBottomOf="@id/tv_6" />

    <TextView
        android:id="@+id/tv_9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="第1、"
        android:layout_marginTop="8dp"
        android:layout_marginStart="10dp"
        style="@style/TextStyle_black_14sp"
        app:layout_constraintStart_toEndOf="@id/tv_8"
        app:layout_constraintTop_toBottomOf="@id/tv_6" />

    <TextView
        android:id="@+id/tv_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="实验室："
        app:layout_constraintStart_toStartOf="@id/tv_7"
        app:layout_constraintTop_toBottomOf="@id/tv_7"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/tv_11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="南区实"
        android:layout_marginTop="8dp"
        style="@style/TextStyle_black_14sp"
        app:layout_constraintStart_toStartOf="@id/tv_8"
        app:layout_constraintTop_toBottomOf="@id/tv_9" />

    <TextView
        android:id="@+id/tv_12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="当前预约人数："
        app:layout_constraintStart_toStartOf="@id/tv_10"
        app:layout_constraintTop_toBottomOf="@id/tv_10"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/tv_13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:layout_marginTop="8dp"
        style="@style/TextStyle_black_14sp"
        app:layout_constraintStart_toStartOf="@id/tv_11"
        app:layout_constraintTop_toBottomOf="@id/tv_11" />

    <View
        android:id="@+id/v_2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/tv_13" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/v_2"
        android:layout_marginVertical="5dp"
        app:layout_constraintBottom_toTopOf="@id/submit_button" />

    <Button
        android:id="@+id/submit_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="提交"
        android:textSize="16sp"
        android:layout_marginHorizontal="30dp"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="30dp" />

</androidx.constraintlayout.widget.ConstraintLayout>