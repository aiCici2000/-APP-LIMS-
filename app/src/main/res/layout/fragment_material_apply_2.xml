<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:id="@+id/lab_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/lab_item_back"
        android:text="信息系统与理论"
        android:textSize="14sp"
        android:textStyle="bold"
        android:padding="5dp"
        android:layout_margin="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lab_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="南区实训楼301-303"
        style="@style/TextStyle"
        android:textColor="@color/color_666666"
        app:layout_constraintTop_toTopOf="@id/lab_name"
        app:layout_constraintStart_toEndOf="@id/lab_name"
        app:layout_constraintBottom_toBottomOf="@id/lab_name"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="5dp"/>

    <View
        android:id="@+id/v1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line"
        app:layout_constraintTop_toBottomOf="@id/lab_name"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/mat_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="超五类双绞线"
        android:textColor="@color/bottom_down"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/v1" />

    <TextView
        android:id="@+id/tv_4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="备注："
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@id/mat_name"
        app:layout_constraintTop_toBottomOf="@id/mat_name" />

    <TextView
        android:id="@+id/tv_5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="当前数量："
        android:layout_marginTop="10dp"
        android:layout_marginStart="150dp"
        app:layout_constraintEnd_toStartOf="@id/mat_num"
        app:layout_constraintTop_toBottomOf="@id/v1" />

    <TextView
        android:id="@+id/mat_num"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="20"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="30dp"
        app:layout_constraintTop_toBottomOf="@id/v1" />

    <TextView
        android:id="@+id/mat_other"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="无"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toEndOf="@id/tv_4"
        app:layout_constraintTop_toBottomOf="@id/mat_name" />

    <TextView
        android:id="@+id/tv_8"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="申请数量"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="@id/tv_4"
        app:layout_constraintTop_toBottomOf="@id/tv_4" />

    <View
        android:id="@+id/v2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line"
        app:layout_constraintTop_toBottomOf="@id/tv_8"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="5dp" />

    <com.example.lims.widget.CountClickView
        android:id="@+id/count_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:ccvInput="true"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toBottomOf="@id/v2"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/submit_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="提交"
        android:textSize="16sp"
        android:layout_marginHorizontal="30dp"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="30dp" />


</androidx.constraintlayout.widget.ConstraintLayout>